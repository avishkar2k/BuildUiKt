<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appTextStyleTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="appTextStyleNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cardViewProperties" parent="CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_height_fl</item>
        <item name="android:layout_margin">14dp</item>
        <item name="cardElevation">20dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="appTextStyleTitleLauncherActivity" parent="appTextStyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
</resources>